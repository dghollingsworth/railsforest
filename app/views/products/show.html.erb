<h1>Edit - Delete</h2>


<p>
	<%= @product.name %><br/>
	<%= @product.description %><br/>
	<%= @product.formatted_price %><br/>
</p>

<%= link_to('Edit Product', edit_product_path(@product.id)) %> | <%= link_to('Delete This Product', @product, :confirm=>"Are you sure you want to delete this product?", :method=>:delete) %>


<% if current_user %>
	<h4>Write a review...</h4>

	<%= form_for([@product, @review]) do |f| %>
		<% if @review.errors.any? %>
			<div id="error_explanations">
				<h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

				<ul>
					<% @review.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>

			</div>
		<% end %>
	
	
		<div class="field">
			<%= f.label :comment %><br/>
			<%= f.text_area :comment %>
		</div>
		<div class="actions">
			<%= f.submit %>
		</div>
	<% end %>

	<p><b>Reviews for:</b> <%= @product.name %></p>

	<% @product.reviews.each do |review| %>
		<p>
			<%= review.comment %>
			<br/>
			<% if review.user != nil %>
				<em>by <%=review.user.email %></em>
				Added on: <%=review.created_at %>
			<% end %>
		</p>
	<% end %>

<% end %>

